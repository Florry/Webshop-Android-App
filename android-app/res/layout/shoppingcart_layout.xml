<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/shoppingcart_list_view"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:divider="#fff"
        android:dividerHeight="10dp" >
    </ListView>

    <TextView
        android:id="@+id/shoppingcart_no_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shoppingcart_no_products"
        android:visibility="gone" />

    <Button
        android:id="@+id/shoppingcart_place_order_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shoppingcart_place_order"
        android:textColor="#000"
        android:visibility="gone" />

</LinearLayout>
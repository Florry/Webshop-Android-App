<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp" >

    <TextView
        android:id="@+id/order_list_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_list_user"
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/order_list_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_list_name"
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/order_list_space"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/order_list_address" />

    <TextView
        android:id="@+id/order_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_list_space"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/order_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_products"
        android:layout_marginLeft="10dp"
        android:textSize="20sp" />

</RelativeLayout>